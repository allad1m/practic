<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Длина пароля (4-50):" Margin="10,10,0,0"/>
        <TextBox x:Name="PasswordLengthTextBox" Margin="10,30,10,0" Height="25" VerticalAlignment="Top"/>

        <Label Content="Латинские символы:" Margin="10,70,0,0"/>
        <TextBox x:Name="LatinCharsTextBox" Margin="10,90,10,0" Height="25" VerticalAlignment="Top"/>

        <Label Content="Цифры:" Margin="10,130,0,0"/>
        <TextBox x:Name="DigitsTextBox" Margin="10,150,10,0" Height="25" VerticalAlignment="Top"/>

        <Label Content="Прочие символы:" Margin="10,190,0,0"/>
        <TextBox x:Name="SpecialCharsTextBox" Margin="10,210,10,0" Height="25" VerticalAlignment="Top" IsReadOnly="True"/>

        <Button Content="Сгенерировать пароль" Margin="10,250,10,0" Height="30" VerticalAlignment="Top" Click="GeneratePasswordButton_Click"/>
        <Button Content="Показать сохраненные пароли" Margin="200,250,10,0" Height="30" VerticalAlignment="Top" Click="ShowSavedPasswordsButton_Click"/>
    </Grid>
</Window>
