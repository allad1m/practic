<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Серия паспорта (69 01 - 69 04):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="txtSeries" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" Width="100"/>

        <Label Content="Номер паспорта (100000 - 800000):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBox x:Name="txtNumber" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" Width="100"/>

        <Button x:Name="btnCheck" Content="Проверить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" Click="btnCheck_Click"/>
        <Button x:Name="btnShowResults" Content="Показать результаты" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,130,0,0" Click="btnShowResults_Click"/>

        <ListBox x:Name="lstResults" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10,170,10,10"/>
    </Grid>
</Window>
