<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Имя:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="txtFirstName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" Width="200"/>

        <Label Content="Фамилия:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBox x:Name="txtLastName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" Width="200"/>

        <Button x:Name="btnSave" Content="Запомнить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" Click="btnSave_Click"/>
        <Button x:Name="btnShowNames" Content="Показать имена и фамилии" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,130,0,0" Click="btnShowNames_Click"/>

        <ListBox x:Name="lstWarnings" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10,170,10,10"/>
    </Grid>
</Window>
